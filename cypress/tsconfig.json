{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "assets/*": ["../src/assets/*"],
      "components/*": ["../src/components/*"],
      "screens/*": ["../src/screens/*"],
      "shared/*": ["../src/shared/*"],
      "state/*": ["../src/state/*"],
      "types/*": ["../src/types/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
